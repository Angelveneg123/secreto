<Window x:Class="SaludAp.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaludAp"
        mc:Ignorable="d"
        Title="Window3"  Height="550" Width="800">
    <Grid RenderTransformOrigin="0.402,0.767" Background="#FFE4FFF8" Margin="0,0,-141,-71">

        <!-- PANEL PERFIL -->
        <Border BorderBrush="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" 
                BorderThickness="2" CornerRadius="15" HorizontalAlignment="Left" 
                Height="412" Margin="39,24,0,0" VerticalAlignment="Top" Width="254" Background="White" RenderTransformOrigin="0.009,0.792"/>

        <!-- FOTO PERFIL -->
        <Image x:Name="imgPerfil" HorizontalAlignment="Left" Height="125" 
               Margin="91,32,0,0" VerticalAlignment="Top" Width="150" 
               Source="/f2.png" Stretch="Fill"/>

        <!-- BOTÓN CAMBIAR FOTO -->
        <Button Content="Cambiar Foto" HorizontalAlignment="Left" 
                Margin="94,162,0,0" VerticalAlignment="Top" Width="147" 
                Click="btnCambiarFoto_Click"/>

        <!-- NOMBRE -->
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="39,204,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Margin="95,200,0,0"
                 TextWrapping="Wrap" Text="Jose Lopez" VerticalAlignment="Top" 
                 Width="147" Height="29" FontSize="16" Foreground="#FF07763C" IsReadOnly="True"/>

        <!-- BOTÓN EDITAR PERFIL -->
        <Button x:Name="btnEditar" Content="Editar Perfil" HorizontalAlignment="Left" 
                Margin="95,238,0,0" VerticalAlignment="Top" Width="147" 
                Click="btnEditar_Click"/>

        <!-- CAMPOS PERFIL -->
        <Label Content="Email" HorizontalAlignment="Left" Margin="82,270,0,0" VerticalAlignment="Top"/>
        <Label Content="Teléfono " HorizontalAlignment="Left" Margin="82,301,0,0" VerticalAlignment="Top"/>
        <Label Content="Dirección" HorizontalAlignment="Left" Margin="82,332,0,0" VerticalAlignment="Top"/>
        <Label Content="Tipo de Sangre " HorizontalAlignment="Left" Margin="47,363,0,0" VerticalAlignment="Top"/>

        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="145,270,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="126" IsReadOnly="True"/>
        <TextBox x:Name="txtTelefono" HorizontalAlignment="Left" Margin="145,301,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="126" IsReadOnly="True"/>
        <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Margin="145,332,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="126" IsReadOnly="True"/>
        <TextBox x:Name="txtTipoSangre" HorizontalAlignment="Left" Margin="145,363,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="126" IsReadOnly="True"/>

        <!-- PANEL ACCESO RÁPIDO -->
        <Border BorderBrush="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" 
                BorderThickness="2" CornerRadius ="15" HorizontalAlignment="Left" 
                Height="216" Margin="330,49,0,0" VerticalAlignment="Top" Width="440" Background="White">
            <Button Content="Mis Citas" HorizontalAlignment="Left" Height="39" Margin="62,0,0,0" VerticalAlignment="Center" Width="109" Click="Button_Click_2"/>
        </Border>
        <Label Content="Acceso Rápido" HorizontalAlignment="Left" Margin="506,49,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift Light" FontSize="16"/>
        <Label Content="Navega rápidamente a los servicios utilizados " HorizontalAlignment="Left" Margin="394,78,0,0" VerticalAlignment="Top" FontSize="16"/>

        <!-- BOTONES SERVICIOS -->

        <!-- CONTACTO EMERGENCIA -->
        <Border BorderBrush="Red" BorderThickness="2" CornerRadius="15" HorizontalAlignment="Left" 
                Height="101" Margin="330,311,0,0" VerticalAlignment="Top" Width="440" Background="White"/>
        <Label Content="Contactos de Emergencia" HorizontalAlignment="Left" Margin="455,315,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Pedro Garcia +505 89765433" HorizontalAlignment="Left" Margin="409,363,0,0" VerticalAlignment="Top" Width="235" FontSize="14"/>
        <Button Content="LLamar " HorizontalAlignment="Left" Margin="649,363,0,0" VerticalAlignment="Top" Click="Button_Click_1" Width="83"/>
        <Button Content="→" HorizontalAlignment="Left" Height="32" Margin="716,6,0,0" VerticalAlignment="Top" Width="54" Click="Button_Click" FontSize="20" FontFamily="Arial Rounded MT Bold"/>
        <Button Content="Historial Médico" HorizontalAlignment="Left" Height="39" Margin="526,137,0,0" VerticalAlignment="Top" Width="109" Click="Button_Click_3"/>
        <Button Content="Turnos Virtuales " HorizontalAlignment="Left" Height="39" Margin="394,204,0,0" VerticalAlignment="Top" Width="109"/>
    </Grid>
</Window>
