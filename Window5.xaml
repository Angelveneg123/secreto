<Window x:Class="SaludAp.Window5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window5" Height="500" Width="800">
    <Grid Background="#FFE4FFF8">
        <Label Content="Mis Citas" FontSize="24" FontWeight="Bold"
               HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <ListView x:Name="CitasList" Width="700" Margin="0,90,0,10" VerticalAlignment="Top">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Especialidad}" FontSize="16" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Doctor}"/>
                        <TextBlock Text="{Binding FechaHora, StringFormat='{}{0:dddd, dd MMMM yyyy hh:mm tt}'}"/>
                        <TextBlock Text="{Binding Consultorio}"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Reprogramar" Background="#E0F2F1" Margin="5" 
                                    Click="BtnReprogramar_Click"
                                    Tag="{Binding}" />
                            <Button Content="Cancelar" Background="#FFCDD2" Margin="5" 
                                    Click="BtnCancelar_Click"
                                    Tag="{Binding}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Content="←" HorizontalAlignment="Left" Margin="50,23,0,0" 
            VerticalAlignment="Top" FontSize="20" Height="39" Width="42" Click="Button_Click_1"/>
    </Grid>
</Window>


