<Window x:Class="SaludAp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaludAp"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" 
        mc:Ignorable="d"
        Title="Window2" Height="550" Width="850">

    <Grid Background="#FFE4FFF8" RenderTransformOrigin="1.199,0.438">

        <Border BorderBrush="White" BorderThickness="2" CornerRadius="15"  
                HorizontalAlignment="Left" Height="443" Margin="151,10,0,0" 
                VerticalAlignment="Top" Width="407" Background="White" RenderTransformOrigin="0.947,0.308">

            <Border.Effect>
                <DropShadowEffect Color="#80000000" BlurRadius="12" ShadowDepth="4" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <Label Content="Registro de Paciente" HorizontalAlignment="Left" Margin="282,10,0,0" 
               VerticalAlignment="Top" Width="178" Foreground="#FF248721" FontSize="16"/>

        <Label Content="Complete los datos para crear una cuenta" HorizontalAlignment="Left" 
               Margin="230,36,0,0" VerticalAlignment="Top" FontSize="14"/>

        <Label Content="Nombre Completo" HorizontalAlignment="Left" Margin="234,67,0,0" 
               VerticalAlignment="Top" Width="170" FontSize="14"/>

        <TextBox x:Name="txtnombre" HorizontalAlignment="Left" Margin="238,98,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="173" BorderBrush="#FF72A862" TextChanged="txtnombre_TextChanged"/>

        <Label Content="Teléfono" HorizontalAlignment="Left" Margin="234,129,0,0" 
               VerticalAlignment="Top" FontSize="14"/>

        <TextBox x:Name="txttelefono" HorizontalAlignment="Left" Margin="238,160,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="173" BorderBrush="#FF72A862"/>

        <Label Content="Dirección" HorizontalAlignment="Left" Margin="237,186,0,0" 
               VerticalAlignment="Top" FontSize="14"/>

        <TextBox x:Name="txtdireccion" HorizontalAlignment="Left" Margin="238,215,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Top" Width="173" BorderBrush="#FF72A862"/>

        <Label Content="Contraseña" HorizontalAlignment="Left" Margin="234,238,0,0" 
               VerticalAlignment="Top" FontSize="14"/>

        <PasswordBox x:Name="txtcontraseña" HorizontalAlignment="Left" Margin="237,267,0,0" 
                     VerticalAlignment="Top" Width="174" BorderBrush="#FF72A862"/>

        <Label Content="Confirmar Contraseña" HorizontalAlignment="Left" Margin="234,290,0,0" 
               VerticalAlignment="Top" FontSize="14"/>

        <PasswordBox x:Name="txtcomfirmar" HorizontalAlignment="Left" Margin="237,321,0,0" 
                     VerticalAlignment="Top" Width="170" BorderBrush="#FF72A862"/>

        <CheckBox Content="Acepto los términos y condiciones del Hospital" 
                  HorizontalAlignment="Left" Margin="223,352,0,0" VerticalAlignment="Top" 
                  Height="22" Width="313" Checked="CheckBox_Checked" FontSize="14"/>

        <Button x:Name="btnregistrarse" Content="Registrarse" HorizontalAlignment="Left" 
                Margin="301,379,0,0" VerticalAlignment="Top" Height="35" Width="103" 
                FontSize="14" Background="#FF49AE5D" Foreground="White" Click="Button_Click"/>

        <Button Content="←" HorizontalAlignment="Left" Margin="171,26,0,0" 
                VerticalAlignment="Top" FontSize="20" Height="39" Width="42" Click="Button_Click_1"/>

    </Grid>
</Window>
