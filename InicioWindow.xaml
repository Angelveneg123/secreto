<Window x:Class="SaludAp.InicioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaludAp"
        mc:Ignorable="d"
        Title="InicioWindow" Height="500" Width="850">

    <Grid Margin="0,0,-17,-16" Background="#FFE4FFF8">

        <!-- Panel principal con sombra -->
        <Border BorderBrush="White" BorderThickness="2" CornerRadius="15" 
                HorizontalAlignment="Left" Height="393" Margin="203,11,0,0" 
                VerticalAlignment="Top" Width="375" Background="White">
            <Border.Effect>
                <DropShadowEffect Color="#80000000" BlurRadius="12" ShadowDepth="4" Opacity="0.3"/>
            </Border.Effect>

            <Button Content="Registrarse" 
                    HorizontalAlignment="Center" Height="46" Margin="0,255,0,0" 
                    VerticalAlignment="Top" Width="207" 
                    Click="Button_Click_1" 
                    Background="#FF49AE5D" 
                    Foreground="White"/>
        </Border>

        <!-- Textos -->
        <Label Content="Salud Add" 
               HorizontalAlignment="Left" Height="28" Margin="340,103,0,0" 
               VerticalAlignment="Top" Width="162" 
               FontFamily="Bahnschrift SemiLight" FontSize="16"/>

        <Label Content="Sistema de Gestion Hospitalaria " 
               HorizontalAlignment="Left" Margin="274,136,0,0" 
               VerticalAlignment="Top" Height="27" Width="260" 
               FontFamily="Bahnschrift SemiLight SemiCondensed" FontSize="16"/>

        <Label Content="Acceso " 
               HorizontalAlignment="Left" Margin="360,168,0,0" 
               VerticalAlignment="Top" Width="120" 
               FontFamily="Bahnschrift SemiLight" FontSize="16"/>

        <Button Content="Iniciar Sesion" 
                HorizontalAlignment="Left" Height="44" Margin="286,208,0,0" 
                VerticalAlignment="Top" Width="206" 
                Click="Button_Click" 
                Background="#FF49AE5D" 
                Foreground="White"/>

        <Label Content="Necesitas ayuda" 
               HorizontalAlignment="Left" Margin="326,329,0,0" 
               VerticalAlignment="Top" Height="40" Width="154" 
               FontFamily="Bahnschrift SemiLight" FontSize="16"/>

        <Label Content="Contactar servicio Tecnico" 
               HorizontalAlignment="Left" Margin="301,368,0,0" 
               VerticalAlignment="Top" Height="36" Width="207" 
               FontSize="16" FontFamily="Bahnschrift SemiLight SemiCondensed"/>

        <!-- Selección de cargo -->
        <ComboBox x:Name="combocargo" DisplayMemberPath="Nombre" 
                  HorizontalAlignment="Left" Height="25" Margin="224,35,0,0" 
                  VerticalAlignment="Top" Width="84" 
                  SelectionChanged="ComboBox_SelectionChanged"/>

        <!-- Sección de traducción estilo Google -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,30,0" VerticalAlignment="Top" Height="30">

            <ComboBox x:Name="cmbOrigen" Width="105" SelectedIndex="0">
                <ComboBoxItem Content="Español"/>
                <ComboBoxItem Content="Miskito"/>
            </ComboBox>

            <Label Content=" → " VerticalAlignment="Center" FontSize="16" Margin="5,0"/>

            <ComboBox x:Name="cmbDestino" Width="107" SelectedIndex="1">
                <ComboBoxItem Content="Miskito"/>
                <ComboBoxItem Content="Español"/>
            </ComboBox>

            <Button x:Name="BtnTraducir" Content="🌐 Traducir" 
                    Width="100" Height="30" Margin="10,0,0,0"
                    Background="#FF49AE5D" Foreground="White"
                    FontFamily="Bahnschrift SemiLight"
                    Click="BtnTraducir_Click"/>
        </StackPanel>
        <Image HorizontalAlignment="Left" Height="78" Margin="326,20,0,0" VerticalAlignment="Top" Width="133" Source="/salux add .jpg"/>

        <!-- Logo corregido -->
    </Grid>
</Window>



