<Window x:Class="SaludAp.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window"  Height="550" Width="850">
    <Grid Background="#FFE4FFF8" Margin="0,0,-28,-43">
        <Label Content="Solicitar nueva Cita " HorizontalAlignment="Left" Margin="258,10,0,0" VerticalAlignment="Top" Width="187" FontFamily="Bahnschrift" FontSize="18" Foreground="#FF248721"/>
        <Label Content="Agenda tu consulta Medica  " HorizontalAlignment="Left" Margin="239,42,0,0" VerticalAlignment="Top" Width="276" FontFamily="Bahnschrift Light" FontSize="16"/>

        <!-- Especialidad -->
        <Border BorderThickness="2" CornerRadius="15" HorizontalAlignment="Left" Height="81" Margin="90,71,0,0" VerticalAlignment="Top" Width="262" Background="White"/>
        <Label Content="Seleccionar Especialidad" HorizontalAlignment="Left" Margin="118,71,0,0" VerticalAlignment="Top" FontSize="16"/>
        <ComboBox x:Name="comboDoctores" HorizontalAlignment="Left" Margin="107,105,0,0" VerticalAlignment="Top" Width="225" SelectionChanged="ComboBox_SelectionChanged"/>

        <!-- Fecha -->
        <Border BorderThickness="2" CornerRadius="15" HorizontalAlignment="Left" Height="244" Margin="90,180,0,0" VerticalAlignment="Top" Width="262" Background="White"/>
        <Label Content="Seleccionar Fecha " HorizontalAlignment="Left" Margin="120,180,0,0" VerticalAlignment="Top" Width="179" FontSize="16"/>
        <Calendar x:Name="calendarioCitas" HorizontalAlignment="Left" Margin="118,208,0,0" VerticalAlignment="Top" Height="207"/>

        <!-- Horarios -->
        <Border BorderThickness="2" CornerRadius="15" HorizontalAlignment="Left" Height="302" Margin="400,102,0,0" VerticalAlignment="Top" Width="348" Background="White"/>
        <Label Content="Horarios Disponibles " HorizontalAlignment="Left" Margin="494,121,0,0" VerticalAlignment="Top" Width="160" FontSize="16"/>

        <!-- Botones de horarios -->
        <Button x:Name="btn0800" Content="08:00" HorizontalAlignment="Left" Margin="436,176,0,0" VerticalAlignment="Top" Width="50" Height="25" Click="Horario_Click" Background="LightGray"/>
        <Button x:Name="btn0930" Content="09:30" HorizontalAlignment="Left" Margin="506,176,0,0" VerticalAlignment="Top" Width="50" Height="25" Click="Horario_Click" Background="LightGray"/>
        <Button x:Name="btn1045" Content="10:45" HorizontalAlignment="Left" Margin="574,176,0,0" VerticalAlignment="Top" Width="50" Height="25" Click="Horario_Click" Background="LightGray"/>
        <Button x:Name="btn1100" Content="11:00" HorizontalAlignment="Left" Margin="436,225,0,0" VerticalAlignment="Top" Width="50" Height="25" Click="Horario_Click" Background="LightGray"/>
        <Button x:Name="btn0130" Content="01:30" HorizontalAlignment="Left" Margin="506,225,0,0" VerticalAlignment="Top" Width="50" Height="25" Click="Horario_Click" Background="LightGray"/>
        <Button x:Name="btn0245" Content="02:45" HorizontalAlignment="Left" Margin="574,225,0,0" VerticalAlignment="Top" Width="50" Height="25" Click="Horario_Click" Background="LightGray"/>
        <Button x:Name="btn0330" Content="03:30" HorizontalAlignment="Left" Margin="436,272,0,0" VerticalAlignment="Top" Width="50" Height="25" Click="Horario_Click" Background="LightGray"/>

        <!-- Leyenda -->
        <Rectangle HorizontalAlignment="Left" Height="24" Margin="446,353,0,0" Stroke="Green" VerticalAlignment="Top" Width="26"/>
        <Rectangle HorizontalAlignment="Left" Height="24" Margin="574,353,0,0" Stroke="Gray" VerticalAlignment="Top" Width="26"/>
        <Label Content="Disponibles " HorizontalAlignment="Left" Margin="477,351,0,0" VerticalAlignment="Top"/>
        <Label Content="Ocupado" HorizontalAlignment="Left" Margin="606,351,0,0" VerticalAlignment="Top"/>

        <!-- Confirmar -->
        <Button Content="Confirmar Cita" HorizontalAlignment="Left" Height="37" Margin="445,424,0,0" VerticalAlignment="Top" Width="206" Click="Button_Click"/>
    </Grid>
</Window>


